<Window x:Class="Shop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize" WindowState="Maximized" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0" Fill="Black"/>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button FontFamily="Segoe MDL2 Assets" Content="&#xE108;" Background="Black" BorderBrush="Black" Foreground="Azure" FontSize="14" Click="Button_Click"/>
            <Button FontFamily="Segoe MDL2 Assets" Content="&#xE003;" Background="Black" BorderBrush="Black" Foreground="Azure" FontSize="14" Click="Button_Click_1"/>
            <Button FontFamily="Segoe MDL2 Assets" Content="&#xE009;" Name="ExitBtn" Background="Black" BorderBrush="Black" Foreground="Red" Click="ExitBtn_Click" FontSize="14"/>
        </StackPanel>
        <Frame Grid.Row="1" Name="MyFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
